<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.unh.cs.cs791.ThankYouActivity"
    android:background="@drawable/formal_background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_back_button"
        android:minHeight="25dp"
        android:minWidth="100dp"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="@color/banner_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Thank You"
        android:id="@+id/txtClassroomUpdate"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/front_banner_text"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:text="Your Submission has been recorded!"
        android:id="@+id/textView2"
        android:layout_below="@+id/txtClassroomUpdate"
        android:layout_marginTop="79dp"
        android:layout_alignLeft="@+id/txtClassroomUpdate"
        android:layout_alignStart="@+id/txtClassroomUpdate"
        android:layout_alignRight="@+id/txtClassroomUpdate"
        android:layout_alignEnd="@+id/txtClassroomUpdate"

        android:gravity="center"
        />

</RelativeLayout>
