<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.unh.cs.cs791.SubmissionFormActivity"
    android:background="@drawable/formal_background">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Submission Form"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/front_banner_text"
        android:textSize="40dp"
        android:layout_alignRight="@+id/btnSubmit"
        android:layout_alignEnd="@+id/btnSubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_back_button"
        android:minHeight="25dp"
        android:minWidth="100dp"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="@color/banner_color" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/txtClassroom"
        android:layout_below="@+id/textView"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#ffffffff"
        android:backgroundTintMode="screen"
        android:autoText="true"
        android:hint="@string/Classroom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignRight="@+id/space"
        android:layout_alignEnd="@+id/space" />





    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/txtBuilding"
        android:backgroundTint="#ffffffff"
        android:backgroundTintMode="screen"

        android:clickable="true"
        android:editable="true"
        android:elegantTextHeight="true"
        android:layout_alignTop="@+id/txtClassroom"
        android:hint="@string/Building"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@+id/space"
        android:layout_alignStart="@+id/space" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/txtTitle"
        android:backgroundTint="#ffffffff"
        android:backgroundTintMode="screen"

        android:layout_below="@+id/txtClassroom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/Title" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes or No Question?"
        android:id="@+id/radioButton"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText2"
        android:backgroundTint="#ffffffff"
        android:backgroundTintMode="screen"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/Additional_Information" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />


</RelativeLayout>
