<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.unh.cs.cs791.PlacesActivity"
    android:background="@drawable/formal_background">




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Observation"
        android:id="@+id/btnNewObservation"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:minHeight="25dp"
        android:minWidth="200dp"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="@color/background_prototype"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalize and Submit"
        android:id="@+id/btnFinalizeAndSubmit"
        android:layout_below="@+id/btnNewObservation"
        android:layout_alignLeft="@+id/btnNewObservation"
        android:layout_alignStart="@+id/btnNewObservation"
        android:layout_marginTop="20dp"
        android:minWidth="200dp"
        android:background="@drawable/rounded_button"
        android:minHeight="25dp"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="@color/background_prototype"
        android:textColor="#ffffffff" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtClassroomUpdate"
                android:layout_column="0"
                android:textColor="#ff000000" />


        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridView"
            android:numColumns="16"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"

            android:backgroundTint="#ff8cff57"
            android:backgroundTintMode="src_in"
            android:clickable="false"
            android:layout_above="@+id/btnNewObservation" />


</RelativeLayout>
