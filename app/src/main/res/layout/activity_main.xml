<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/main_background"
    android:id="@+id/just">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Learning App"
        android:id="@+id/txtHeader"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/front_banner_text"
        android:textSize="50dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Username"
        android:ems="10"
        android:id="@+id/etxtUsername"
        android:background="@color/username_background"
        android:layout_below="@+id/txtHeader"
        android:layout_alignLeft="@+id/txtHeader"
        android:layout_alignStart="@+id/txtHeader"
        android:height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_alignRight="@+id/txtHeader"
        android:layout_alignEnd="@+id/txtHeader" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtClassroom"
        android:text="Password"

        android:background="@color/password_background"
        android:layout_below="@+id/etxtUsername"
        android:layout_alignLeft="@+id/etxtUsername"
        android:layout_alignStart="@+id/etxtUsername"
        android:layout_alignRight="@+id/etxtUsername"
        android:layout_alignEnd="@+id/etxtUsername"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogIn"
        android:layout_below="@+id/txtClassroom"
        android:layout_alignLeft="@+id/txtClassroom"
        android:layout_alignStart="@+id/txtClassroom"
        android:layout_alignRight="@+id/txtClassroom"
        android:layout_alignEnd="@+id/txtClassroom"
        android:background="@drawable/rounded_button"
        android:minHeight="25dp"
        android:text="Log in"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="@color/background_prototype" />


</RelativeLayout>
